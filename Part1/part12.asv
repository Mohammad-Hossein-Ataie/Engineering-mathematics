tmin = 0;
tmax = 10;
dt = (tmax - tmin)/100;
time = tmin:dt:tmax;
f = 1/2;
y = cos(2*pi*f*time);
figure(1);
plot(time,y);
xlabel('time');
ylabel('Y');
title('Cosine func in time domain');
fs = 1/dt;
%xfreq = linspace(-fs/2,fs/2,numel(y));
xfreq=(0:length(y)-1)*fs
yfreq = fft(y);
figure(2);
plot(xfreq,yfreq);
xlabel('Frequency');
ylabel('YFreq');
title('Cosine func in frequency domain(not shifted)');
yfreq = fftshift(yfreq);
figure(3);
plot(xfreq,yfreq);
xlabel('Frequency');
ylabel('YFreq');
title('Cosine func in frequency domain(shifted)');
